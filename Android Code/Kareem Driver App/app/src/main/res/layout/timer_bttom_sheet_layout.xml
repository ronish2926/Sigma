<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_dialog">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_stroked"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:gravity="center">

                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="?attr/colorNormal"
                    android:text="20 min"></com.haris.kareem_driver.TextviewUtil.NormalTextview>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">


                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="?attr/colorButton"
                    android:textAlignment="center"
                    android:text="@string/waiting_charge_tagline"></com.haris.kareem_driver.TextviewUtil.NormalTextview>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_start_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingEnd="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_stroked"
                    android:textColor="?attr/colorMenuBackground"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/start_ride"></com.haris.kareem_driver.TextviewUtil.NormalTextview>

              <!--  <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_reject"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_filled"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="@string/reject_ride"></com.haris.kareem_driver.TextviewUtil.NormalTextview>
-->

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>