            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_done"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:background="@drawable/bg_call_to_action">


                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/upload_document"></com.haris.kareem_driver.TextviewUtil.NormalTextview>



            </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</RelativeLayout>