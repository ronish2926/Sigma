<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapView"></com.google.android.gms.maps.MapView>




    </LinearLayout>



    <RelativeLayout
        android:id="@+id/layout_ride"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_dialog">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical">



                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="?attr/colorNormal"
                    android:text="Pkr 250"></com.haris.kareem_driver.TextviewUtil.NormalTextview>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="?attr/colorTagline"></TextView>


                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_ride_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="?attr/colorNormal"
                    android:text="Economy"></com.haris.kareem_driver.TextviewUtil.NormalTextview>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="?attr/colorTagline"></TextView>


                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="?attr/colorNormal"
                    android:text="Cash Trip"></com.haris.kareem_driver.TextviewUtil.NormalTextview>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="?attr/colorTagline"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_accept"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_stroked"
                    android:textColor="?attr/colorMenuBackground"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/accept_ride"></com.haris.kareem_driver.TextviewUtil.NormalTextview>

                <com.haris.kareem_driver.TextviewUtil.NormalTextview
                    android:id="@+id/txt_reject"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_filled"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="@string/reject_ride"></com.haris.kareem_driver.TextviewUtil.NormalTextview>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_circle_stroked"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center">

            <com.haris.kareem_driver.TextviewUtil.NormalTextview
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:textColor="?attr/colorNormal"
                android:text="20 min"></com.haris.kareem_driver.TextviewUtil.NormalTextview>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>